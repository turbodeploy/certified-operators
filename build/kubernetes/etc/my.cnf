# Turbonomic MariaDB Settings

[client]
port                    = 3306
socket                  = /var/lib/mysql/mysql/mysqld.sock

# This was formally known as [safe_mysqld]. Both versions are currently parsed.
[mysqld_safe]
socket                  = /var/lib/mysql/mysql/mysqld.sock
nice                    = 0

[mysqld]
event_scheduler         = ON
skip-host-cache
skip-name-resolve
skip-external-locking
user                    = mysql
pid-file                = /var/lib/mysql/mysql/mysqld.pid
socket                  = /var/lib/mysql/mysql/mysqld.sock
port                    = 3306
basedir                 = /mysql
datadir                 = /var/lib/mysql/mysql
# create the tempdir in the same directory as the data dir as we don't have
# enough space in the tmpfs.
tmpdir                  = /var/lib/mysql/mysql/tmp
lc_messages_dir         = /usr/share/mysql
lc_messages             = en_US
max_connections         = 100
connect_timeout         = 5
wait_timeout            = 86400
max_allowed_packet      = 16M
thread_cache_size       = 128
sort_buffer_size        = 4M
bulk_insert_buffer_size = 16M
tmp_table_size          = 32M
max_heap_table_size     = 32M
myisam_recover_options  = BACKUP
key_buffer_size         = 128M
table_open_cache        = 400
myisam_sort_buffer_size = 512M
concurrent_insert       = 2
read_buffer_size        = 2M
read_rnd_buffer_size    = 1M
query_cache_limit       = 8M
query_cache_size        = 64M
slow_query_log_file     = /var/log/mysql/mariadb-slow.log
long_query_time         = 10
expire_logs_days        = 10
max_binlog_size         = 100M
sql_mode                = NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES
default_storage_engine  = InnoDB
innodb_buffer_pool_size = 4096M
innodb_log_file_size    = 256M
innodb_flush_log_at_trx_commit=2
innodb_log_buffer_size  = 8M
innodb_file_per_table   = 1
innodb_open_files       = 400
innodb_io_capacity      = 400
innodb_flush_method     = O_DIRECT
#character-set-server    = utf8mb4
#collation-server        = utf8mb4_unicode_ci
# Enable the creation of stored procedures for application ids without SUPER privilege
log_bin_trust_function_creators = 1

# Changes to align to legacy - October 12, 2017
collation-server         = utf8_unicode_ci
character-set-server     = utf8
character-set-client     = utf8

[mysqldump]
quick
quote-names
max_allowed_packet      = 128M
socket                  = /var/lib/mysql/mysql/mysql.sock

[mysql]
no-auto-rehash

[isamchk]
key_buffer              = 16M

[myisamchk]
key_buffer_size         = 20M
sort_buffer_size        = 20M
read_buffer             = 2M
write_buffer            = 2M

[mysqlhotcopy]
interactive-timeout

[mysqld_multi]
mysqld                  = /mysql/bin/mysqld_safe
mysqladmin              = /mysql/bin/mysqladmin
log                     = /var/log/mysqld_multi.log
# user                    = multi_admin
# password                = secret

