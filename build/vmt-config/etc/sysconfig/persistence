PATH=$PATH:/srv/reports/bin
persistence_BASE=/srv/rails/webapps/persistence
BIRT_HOME=/srv/birt-runtime
VMT_REPORTS_HOME=/srv/reports
VMT_EMAIL_FROM_ADDR=reports@vmturbo.com
USER=wwwrun
GROUP=www

if which rails &> /dev/null; then
	railsv=`rails -v`
	railsv=${railsv:6}
	RAILS_GEM_VERSION=$railsv
fi
BIRT_RESOURCE_PATH=/srv/reports/scripts

export persistence_BASE BIRT_HOME VMT_REPORTS_HOME VMT_EMAIL_FROM_ADDR RAILS_GEM_VERSION BIRT_RESOURCE_PATH
