<% unless @embedded %>

<div class="buttons_etc buttons_etc_top">
<table width="100%" border="0" cellspacing="0" style="margin-top:-5px;margin-bottom:30px;">
<tr>
<td width="60%" valign="top">
<%= js_button_to 'Modify', :controller => 'entities', :action => 'edit', :id => @entity %> 
<select onchange="javascript: location = this[this.selectedIndex].value;">
    <option value="#">Select an action...</option>
    <option value="#">----------------</option>
    <option value="<%=url_for(:controller => 'entities', :action => 'show', :id => @entity.id)%>"> Normal Format </option>
    <option value="<%=url_for(:controller => 'entities', :action => 'show_as_doc', :id => @entity.id)%>"> Document Format </option>
    <option value="#">----------------</option>
    <option value="<%=url_for(:controller => 'entities', :action => 'list')%>"> <%="Table of Entity".pluralize%> </option>
    <option value="<%=url_for(:controller => 'entities', :action => 'block_list')%>"> <%="List of Entity".pluralize%> </option>
    <option value="#">----------------</option>
    <option value="<%=url_for(:controller => 'entities', :action => 'new')%>"> Add new Entity </option>

    <option value="#">----------------</option>
    <option value="<%=url_for(:controller => 'entity_assns', :action => 'new', :entity_id => @entity.id, :obj_context => @entity.iname)%>"> .. Add new Entity Assn </option>
    <option value="<%=url_for(:controller => 'entity_attrs', :action => 'new', :entity_id => @entity.id, :obj_context => @entity.iname)%>"> .. Add new Entity Attr </option>

<!-- BEGIN-UID.user_actions -->

<!-- END-UID.user_actions -->

    </select>
</td>
<td class="context" width="40%">
   <%=context_links(@entity)%>
</td>
</tr>
</table>
</div>

<% end %>

<%
   # default vis control to show all
   unless @show_item
     @show_item = {}
     @show_item.default = true
   end

   @ft_view_section = {}
%>


<div class="show_as_doc_view show_as_doc_view_entity">    <!-- show_as_doc_view -->

    <div class="show_doc_props show_doc_props_entity">   <!-- show_doc_props -->

      <p class="doc_prev_next_links">
      <%=link_to "previous", url_show_as_doc(@entity.prev_item), :title => "Previous Entity", :style => "font-size:8pt;"%> 
      | <%=link_to "next", url_show_as_doc(@entity.next_item), :title => "Next Entity", :style => "font-size:8pt;"%>
      </p>

<!-- BEGIN-UID.user_properties -->

<!-- END-UID.user_properties -->



<% @ft_view_section[:name] = capture { %>
<% if @show_item[:name] then %>

  <!-- Name -->

  <div class="doc_attr_group attr_group_entity_name title">     <!-- div10-b -->
    <div class="doc_attr_label"> Name </div>                   <!-- div11-b -->
    <div class="doc_attr_value single_line"> <%= auto_link(@entity.name.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->
  <p class="spacer">&nbsp;</p>

<% end %>
<% } %>



<% @ft_view_section[:display_name] = capture { %>
<% if @show_item[:display_name] then %>

  <!-- Display Name -->

  <div class="doc_attr_group attr_group_entity_display_name ">     <!-- div10-b -->
    <div class="doc_attr_label"> Display Name </div>                   <!-- div11-b -->
    <div class="doc_attr_value single_line"> <%= auto_link(@entity.display_name.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->

<% end %>
<% } %>



<% @ft_view_section[:uuid] = capture { %>
