    <div class="doc_attr_label"> Uuid </div>                   <!-- div11-b -->
    <div class="doc_attr_value single_line"> <%= auto_link(@entity.uuid.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->

<% end %>
<% } %>



<% @ft_view_section[:creation_class] = capture { %>
<% if @show_item[:creation_class] then %>

