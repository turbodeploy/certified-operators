
<%
   # default vis control to show all
   unless @show_item
     @show_item = {}
     @show_item.default = true
   end

   @ft_view_section = {}
%>

<!-- BEGIN-UID.user_ctrls -->

<!-- END-UID.user_ctrls -->

<% @ft_view_section[:ft_prop_title] = capture { %>
<% if @show_item[:ft_prop_title] then %>
<div class="show_iname">
   <%= @on_demand_report.iname %>
</div>
<% end %>
<% } %>



<% @ft_view_section[:filename] = capture { %>
<% if @show_item[:filename] then %>

  <!-- Filename -->

  <div class="show_attr_group attr_group_on_demand_report_filename ">      <!-- div10 -->
    <div class="show_attr_label"> Filename </div>                    <!-- div11 -->
    <div class="show_attr_value single_line"> <%= auto_link(@on_demand_report.filename.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->
<% end %>
<% } %>



