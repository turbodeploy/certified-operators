    </select>
</td>
<td class="context" width="40%">
   <%=context_links(@standard_report)%>
</td>
</tr>
</table>
</div>

<% end %>

<%
   # default vis control to show all
   unless @show_item
     @show_item = {}
     @show_item.default = true
   end

   show_props_subview = 'show_properties'
   show_rel_subview   = 'show_related'
%>

<!-- BEGIN-UID.user_ctrls -->

<!-- END-UID.user_ctrls -->

<div class="show_view show_view_standard_report">   <!-- show_view -->

    <p class="prev_next_links">
    <%=link_to "previous", url_show(@standard_report.prev_item), :title => "Previous Standard Report", :style => "font-size:8pt;"%> 
    | <%=link_to "next", url_show(@standard_report.next_item), :title => "Next Standard Report", :style => "font-size:8pt;"%>
    </p>

  <% if @show_item[:ft_show_props] %>
    <div id="show_standard_report_props" class="show_props show_props_standard_report">   <!-- show_props -->

<!-- BEGIN-UID.user_properties -->

  <p style="margin-left:20px; color:maroon;"><%= flash[:notice] %></p>

<!-- END-UID.user_properties -->

       <%= render :partial => show_props_subview %>

    </div>         <!-- show_props -->

  <% end %>

    <p class="spacer">&nbsp;</p>

  <% if @show_item[:ft_show_rels] %>
    <div id="show_standard_report_rels" class="show_related">

<!-- BEGIN-UID.user_related_items -->
<h3 class="rel_items_heading">Related Items</h3>
<!-- END-UID.user_related_items -->

       <%= render :partial => show_rel_subview %>

    </div>  <!-- show_related -->

  <% end %>

</div>  <!-- show_view -->

