<%
   # default vis control to show all
   unless @show_item
     @show_item = {}
     @show_item.default = true
   end

   @ft_view_section = {}
%>


<div class="show_as_doc_view show_as_doc_view_standard_report">    <!-- show_as_doc_view -->

    <div class="show_doc_props show_doc_props_standard_report">   <!-- show_doc_props -->

      <p class="doc_prev_next_links">
      <%=link_to "previous", url_show_as_doc(@standard_report.prev_item), :title => "Previous Standard Report", :style => "font-size:8pt;"%> 
      | <%=link_to "next", url_show_as_doc(@standard_report.next_item), :title => "Next Standard Report", :style => "font-size:8pt;"%>
      </p>

<!-- BEGIN-UID.user_properties -->

<!-- END-UID.user_properties -->



