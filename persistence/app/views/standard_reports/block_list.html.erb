<% @standard_reports.each { |obj| %>

    <div class="obj_block">
    <hr/>
<div class="block_line_item">
    <div class="block_label">Filename:</div>
    <% text = obj.filename.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
    <%= link_to text, url_show(obj) %>
</div>
</div>
<div class="block_line_item">
    <div class="block_label">Title:</div>
    <% text = obj.title.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
    <%= text %> 
</div>
</div>
<div class="block_line_item">
    <div class="block_label">Category:</div>
    <% text = obj.category.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
    <%= text %> 
</div>
</div>
<div class="block_line_item">
    <div class="block_label">Short Desc:</div>
    <% text = obj.short_desc.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
    <%= text %> 
</div>
</div>
<div class="block_line_item">
    <div class="block_label">Description:</div>
    <% text = obj.description.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
          <% if session['list_text_toggles'] then %>
             <%= show_hide "show/hide","description_attr_#{obj.id}"%>
             <div class="cell_text_popup" id="description_attr_<%=obj.id%>" style="display:none;">
                <%= text %>
             </div>
          <% else %>
             <%= text %>
          <% end %>
</div>
</div>
<div class="block_line_item">
    <div class="block_label">Period:</div>
    <% text = obj.period.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
    <%= text %> 
</div>
</div>
<div class="block_line_item">
    <div class="block_label">Day Type:</div>
    <% text = obj.day_type.to_s %>
    <% text = rc_format((text)) %>
<div class="block_value">
    <%= text %> 
</div>
</div>
    </div>

<% } %>

