
<%
   # default vis control to show all
   unless @show_item
     @show_item = {}
     @show_item.default = true
   end

   @ft_view_section = {}
%>

<!-- BEGIN-UID.user_ctrls -->

<!-- END-UID.user_ctrls -->

<% @ft_view_section[:ft_prop_title] = capture { %>
<% if @show_item[:ft_prop_title] then %>
<div class="show_iname">
   <%= @report_subscription.iname %>
</div>
<% end %>
<% } %>



<% @ft_view_section[:email] = capture { %>
<% if @show_item[:email] then %>

  <!-- Email -->

  <div class="show_attr_group attr_group_report_subscription_email ">      <!-- div10 -->
    <div class="show_attr_label"> Email </div>                    <!-- div11 -->
    <div class="show_attr_value single_line"> <%= auto_link(@report_subscription.email.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->
<% end %>
<% } %>



<% @ft_view_section[:period] = capture { %>
<% if @show_item[:period] then %>

  <!-- Period -->

  <div class="show_attr_group attr_group_report_subscription_period ">      <!-- div10 -->
