    <div class="show_attr_label"> Standard Report </div> 
    <div class="show_attr_value"> <%= @report_subscription.standard_report.nil? ? "" : link_to(@report_subscription.standard_report.iname, url_show(@report_subscription.standard_report)) %>&nbsp;</div>
  </div>

<% end %>
<% } %>

