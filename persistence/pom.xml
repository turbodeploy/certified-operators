<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>Turbonomic-XL</artifactId>
        <groupId>com.vmturbo</groupId>
        <version>7.22.5-SNAPSHOT</version>
        <relativePath>../build</relativePath>
    </parent>

    <artifactId>persistence</artifactId>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>docker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <configuration>
                            <baseImage>fedora/mariadb</baseImage>
                            <maintainer>Jonathan Hosmer &lt;jonathan.hosmer@vmturbo.com&gt;</maintainer>
                            <runs>
                                <run>mkdir -p /srv/rails/webapps/persistence/{log,tmp,uploads}</run>
                                <run>chmod 755 /srv/rails/webapps/persistence/db/*.sh /scripts/*.sh</run>
                                <run>/bin/bash -c &quot;/usr/bin/mysql_install_db; chown -R mysql:mysql /var/lib/mysql&quot;</run>
                            </runs>
                            <entryPoint>[&quot;/scripts/start.sh&quot;]</entryPoint>
                            <resources>
                                <resource>
                                    <targetPath>/scripts</targetPath>
                                    <directory>${project.basedir}</directory>
                                    <include>config_mariadb.sh</include>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/app</targetPath>
                                    <directory>${project.basedir}/app</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/config</targetPath>
                                    <directory>${project.basedir}/config</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/db</targetPath>
                                    <directory>${project.basedir}/db</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/doc</targetPath>
                                    <directory>${project.basedir}/doc</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/lib</targetPath>
                                    <directory>${project.basedir}/lib</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/nbproject</targetPath>
                                    <directory>${project.basedir}/nbproject</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/public</targetPath>
                                    <directory>${project.basedir}/public</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/script</targetPath>
                                    <directory>${project.basedir}/script</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/utils</targetPath>
                                    <directory>${project.basedir}/utils</directory>
                                </resource>
                                <resource>
                                    <targetPath>/srv/rails/webapps/persistence/vendor</targetPath>
                                    <directory>${project.basedir}/vendor</directory>
                                </resource>
                                <resource>
                                    <targetPath>/etc</targetPath>
                                    <directory>${project.basedir}/../build/vmt-config/etc</directory>
                                    <include>my.cnf</include>
                                </resource>
                            </resources>
                            <serverId>docker-registry</serverId>
                        </configuration>
                        <executions>
                            <execution>
                                <id>build-docker-image</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>tag-docker-image</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>tag</goal>
                                </goals>
                                <configuration>
                                    <image>${docker.image.prefix}/persistence</image>
                                    <newName>${docker.registry}/${docker.image.prefix}/persistence</newName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>push-docker-image</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>push</goal>
                                </goals>
                                <configuration>
                                    <imageName>${docker.registry}/${docker.image.prefix}/persistence</imageName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
