          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "with dormant_vms as (\nSELECT\n  entity.oid as oid\nFROM entity,metric\nWHERE\n  entity.type = 'VIRTUAL_MACHINE' AND\n  ($__timeFrom(),$__timeTo()) OVERLAPS (first_seen, last_seen) AND\n  metric.entity_oid = entity.oid AND\n  metric.entity_hash = entity.hash AND\n  metric.type = 'VCPU' AND\n  $__timeFilter(metric.time)\nGROUP BY entity.oid\nHAVING sum(metric.utilization) = 0  and min(metric.time) < (timestamptz $__timeFrom() + interval '1 hour')\n)\n\nselect entity.name as \"VM Name\", sub.total as \"Storage Used\"\nfrom entity\nINNER JOIN LATERAL (\n    SELECT sum(metric.consumed) total FROM metric \n      WHERE metric.entity_oid = entity.oid\n      and metric.entity_hash = entity.hash \n      and metric.type = 'STORAGE_AMOUNT'\n      and metric.time > (timestamptz $__timeTo() - interval '1 hour')\n      and $__timeFilter(metric.time)\n      GROUP BY metric.time\n      ORDER BY time DESC LIMIT 1\n  ) AS sub ON true\nwhere entity.oid in (select oid from dormant_vms)\norder by sub.total DESC\n\n",
          "refId": "A",
