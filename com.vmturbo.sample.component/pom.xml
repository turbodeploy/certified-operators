<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- All component projects should have this parent.
        It contains common configuration and dependencies. -->
    <parent>
        <groupId>com.vmturbo</groupId>
        <artifactId>com.vmturbo.components</artifactId>
        <version>7.22.1-SNAPSHOT</version>
        <relativePath>../com.vmturbo.components/pom.xml</relativePath>
    </parent>

    <artifactId>sample</artifactId>

    <properties>
        <!-- This is the name of the component used for static swagger documentation generation. -->
        <swagger.component.name>Sample Component</swagger.component.name>
    </properties>

    <!-- TODO (roman, Feb 7 2016): All these plugins are required in order for a component
         to work, so we should move them up to the common pom.xml -->
    <build>
        <plugins>
            <!-- This is the plugin that will build the docker image for the component as
                 part of "mvn install". The configuration for the plugin is in
                 com.vmturbo.components/pom.xml -->
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <configuration>
                  <serverId>docker-registry</serverId>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>com.vmturbo.sample.component.SampleComponent</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <!-- This is the plugin that will build a swagger.json file describing the
            REST interface to any Controllers or gRPC Services -->
            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>internal-swagger</id>
                        <configuration>
                            <apiSources>
                                <apiSource>
                                    <locations>
                                        <location>com.vmturbo.common.protobuf.sample</location>
                                        <location>com.vmturbo.components.common</location>
                                    </locations>
                                </apiSource>
                            </apiSources>

                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- The sample-api dependency is required because the websocket URL that the
             SampleComponentClient connects to is defined in that project, as well as the protobuf
             notification messages. -->
        <dependency>
            <groupId>com.vmturbo</groupId>
            <artifactId>sample-api</artifactId>
        </dependency>

        <!-- This is required for all components that support notifications.
             TODO (roman, Feb 7 2017): Should this also be pulled up to
                 com.vmturbo.components/pom.xml?-->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-websocket</artifactId>
        </dependency>
    </dependencies>

</project>
