<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>Turbonomic-XL</artifactId>
        <groupId>com.vmturbo</groupId>
        <version>${revision}</version>
        <relativePath>../build/pom.xml</relativePath>
    </parent>

    <artifactId>skupper</artifactId>

    <profiles>
        <profile>
            <id>docker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <executable>make</executable>
                            <workingDirectory>${project.basedir}</workingDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <id>build-docker-images</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <arguments>
                                        <argument>docker-build</argument>
                                        <argument>IMG_TAG=${project.version}</argument>
                                        <argument>IMG_PREFIX=${docker.image.prefix}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>tag-docker-images</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <arguments>
                                        <argument>docker-build</argument>
                                        <argument>IMG_TAG=${project.version}</argument>
                                        <argument>IMG_PREFIX=${docker.registry}/${docker.image.prefix}</argument>
                                        <argument>ADD_ARGS=-q</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>tag-docker-images-latest</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <arguments>
                                        <argument>docker-build</argument>
                                        <argument>IMG_TAG=latest</argument>
                                        <argument>IMG_PREFIX=${docker.registry}/${docker.image.prefix}</argument>
                                        <argument>ADD_ARGS=-q</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>push-docker-images</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <arguments>
                                        <argument>docker-push</argument>
                                        <argument>IMG_TAG=${project.version}</argument>
                                        <argument>IMG_PREFIX=${docker.registry}/${docker.image.prefix}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
